<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="175dp"
    android:layout_marginLeft="20dp"
    android:background="@drawable/recommend_box">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="240dp"
        android:layout_height="127dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/temp3"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/name1"
        app:layout_constraintTop_toBottomOf="@+id/cardview1"
        app:layout_constraintStart_toStartOf="@id/cardview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of the place goes here"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/asdsad"
        app:layout_constraintTop_toBottomOf="@+id/name1"
        app:layout_constraintStart_toStartOf="@id/name1"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:text="Restaurant"
        android:textColor="#767676"
        android:textSize="12dp" />
    <ImageView
        android:id="@+id/star_image"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/star"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@+id/asdsad"
        app:layout_constraintTop_toBottomOf="@+id/name1"/>
    <TextView
        android:id="@+id/tttt"
        app:layout_constraintTop_toBottomOf="@+id/name1"
        app:layout_constraintStart_toEndOf="@id/star_image"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:text="4.5"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/review"
        app:layout_constraintTop_toBottomOf="@+id/name1"
        app:layout_constraintStart_toEndOf="@id/tttt"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:text="(15 reviews)"
        android:textColor="#767676"
        android:textSize="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>