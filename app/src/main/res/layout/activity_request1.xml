<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".ui.request.Request1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Itinerary"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_marginLeft="25dp" />
        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/request_1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travelerâ€™s Info"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="25dp"
                android:textColor="#F44336"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/startdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/returndate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last name"
                    android:layout_marginLeft="120dp"
                    app:layout_constraintStart_toEndOf="@+id/startdate"
                    app:layout_constraintTop_toTopOf="@+id/startdate" />
                <EditText
                    android:padding="5dp"
                    android:background="@drawable/line_box"
                    android:id="@+id/start"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:hint="Text"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/startdate"
                    app:layout_constraintEnd_toStartOf="@+id/returndate_edit" />
                <EditText
                    android:padding="5dp"
                    android:id="@+id/returndate_edit"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:hint="Text"
                    android:background="@drawable/line_box"
                    app:layout_constraintTop_toTopOf="@+id/start"
                    app:layout_constraintBottom_toBottomOf="@+id/start"
                    app:layout_constraintStart_toStartOf="@+id/returndate"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/date"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of birth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:background="@drawable/line_box"
            android:id="@+id/dateName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="MM/DD/YYYY"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E91E63"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Info of Travel"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="25dp"
                android:textColor="#F44336"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/number_of"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of travelers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
               <LinearLayout
                   android:id="@+id/temp1"
                   android:layout_marginTop="10dp"
                   app:layout_constraintStart_toStartOf="@+id/number_of"
                   app:layout_constraintTop_toBottomOf="@+id/number_of"
                   android:layout_width="180dp"
                   android:layout_height="45dp"
                   android:background="@drawable/line_box"
                   android:orientation="horizontal"
                   android:weightSum="2">
                   <EditText
                       android:gravity="center"
                       android:padding="5dp"
                       android:background="@android:color/transparent"
                       android:id="@+id/number_edit"
                       android:layout_width="0dp"
                       android:layout_weight="0.8"
                       android:layout_height="match_parent"
                       android:hint="0"
                        />
                   <View
                       android:layout_width="1dp"
                       android:layout_height="match_parent"
                       android:background="@color/black"/>
                   <TextView
                       android:gravity="center"
                       android:id="@+id/number_text"
                       android:layout_weight="1.2"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:text="Adults\n(13 and older)"
                       android:textColor="#979797"
                       />
               </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@+id/temp1"
                    app:layout_constraintTop_toTopOf="@+id/temp1"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:background="@drawable/line_box"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <EditText
                        android:gravity="center"
                        android:padding="5dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/child_edit"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent"
                        android:hint="0" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/nchild_text"
                        android:layout_weight="1.2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Children\n(under 12)"
                        android:textColor="#979797" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/startdate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/returndate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Return date"
                    android:layout_marginLeft="120dp"
                    app:layout_constraintStart_toEndOf="@+id/startdate_text"
                    app:layout_constraintTop_toTopOf="@+id/startdate_text" />
                <EditText
                    android:padding="5dp"
                    android:background="@drawable/line_box"
                    android:id="@+id/startdate_edit"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:hint="Text"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@+id/startdate_text"
                    app:layout_constraintTop_toBottomOf="@+id/startdate_text"
                    />
                <EditText
                    android:padding="5dp"
                    android:id="@+id/return_edit"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:hint="Text"
                    android:background="@drawable/line_box"
                    app:layout_constraintTop_toTopOf="@+id/startdate_edit"
                    app:layout_constraintBottom_toBottomOf="@+id/startdate_edit"
                    app:layout_constraintStart_toStartOf="@+id/returndate_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E91E63"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Methods of Contact"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="25dp"
                android:textColor="#F44336"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick your preferred way to chat - email or text.\n Weâ€™ll only send messages for order updates."
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp" />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:text="Email"
                android:id="@+id/rg_btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_weight="1"
                android:text="Text maessage"
                android:id="@+id/rg_btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email address"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

</ScrollView>
