<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:orientation="vertical"
     android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Itinerary"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/request4"/>
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/gray_circle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order placed!"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks for submitting your itinerary order!\n
            You can expect to hear from the seller\nwithin the next 7 days."
        android:textColor="@color/black"
        android:alpha="0.7"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btn"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="OK"
        android:textColor="@color/white"
        android:background="#8E0808"
        android:layout_gravity="center_horizontal"
        android:layout_width="380dp"
        android:layout_height="60dp"/>

</LinearLayout>