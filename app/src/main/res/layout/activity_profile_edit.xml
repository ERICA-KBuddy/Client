<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profileEdit.profileEditActivity">

    <!-- 상단 고정 영역 -->

    <!-- 스크롤 가능한 내용 -->
    <RelativeLayout
        android:id="@+id/top_fixed_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_save_exit"
            android:layout_width="90dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/edit_profile_round_button_1"
            android:textSize="10dp"
            android:text="Save &amp; Exit" />

        <Button
            android:id="@+id/btn_help"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_profile_round_button_1"
            android:textSize="10dp"
            android:text="Help" />

        <!-- 페이지 단계를 나타내는 점 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_save_exit"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/progress_current" />

                <View
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:background="@color/gray" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/progress_incomplete" />

                <View
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:background="@color/gray" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/progress_incomplete" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Listing Type"
                    android:textSize="12sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Listing Info"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_fixed_layout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Describe the details of your service."
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Title of listing -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title of listing *"
                android:layout_marginTop="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter title"
                android:maxLength="30"/>

            <!-- Detail -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail *"
                android:layout_marginTop="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="Enter details"
                android:maxLength="500"
                android:gravity="top"/>

            <!-- Hashtags -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hashtags (Optional Field)"
                android:layout_marginTop="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="#"/>

            <!-- Professional Background -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professional Background *"
                android:layout_marginTop="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Example: a license, certificate, degree, or resume for relevant work experience."
                android:gravity="top"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add file of proof"
                android:background="@drawable/edit_profile_round_button_2"
                android:layout_marginTop="8dp"/>

            <!-- Add photo(s) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add photo(s) *"
                android:layout_marginTop="16dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add photo"
                android:background="@drawable/edit_profile_round_button_2"
                android:layout_marginTop="8dp"/>

            <!-- Add price for your service -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add price for your service."
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="170dp"
                    android:text="Price"/>
                <EditText
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="won"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="100dp"
                    android:text="Amount of time"/>
                <EditText
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="day(s)"/>
            </LinearLayout>

            <!-- 하단 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <Button
                    android:layout_width="35dp"
                    android:layout_height="15dp"
                    android:background="@color/white"
                    android:layout_marginEnd="200dp"
                    android:textSize="13dp"
                    android:text="Back"/>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:background="@drawable/edit_profile_round_next_button_gray"
                    android:layout_alignParentEnd="true"
                    android:text="Next"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
